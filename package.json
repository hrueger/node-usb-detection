{
  "name": "usb-detection",
  "version": "4.11.0",
  "description": "Listen to USB devices and detect changes on them.",
  "main": "index.js",
  "types": "index.d.ts",
  "gypfile": true,
  "scripts": {
    "node-gyp": "node-gyp",
